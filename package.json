{
  "name": "vscode-yaml-sort",
  "displayName": "YAML Sort",
  "description": "This VS Code extension exposes the possibility to sort and validate yaml files.",
  "version": "1.2.0",
  "engines": {
    "vscode": "^1.10.0"
  },
  "publisher": "PascalReitermann93",
  "icon": "images/icon.png",
  "repository": "https://github.com/pascalre/vscode-yaml-sort",
  "categories": [
    "Formatters"
  ],
  "activationEvents": [
    "onCommand:vscode-yaml-sort.sortYaml",
    "onCommand:vscode-yaml-sort.validateYaml",
    "onCommand:vscode-yaml-sort.sortConfigmap"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "configuration": {
      "properties": {
        "vscode-yaml-sort.lineWidth": {
            "type": "integer",
            "default": 500,
            "description": "Maximum line width for YAML files."
        },
        "vscode-yaml-sort.indent": {
          "type": "integer",
          "default": 2,
          "description": "Indentation width in spaces."
        }
      }
    },
    "commands": [
      {
        "command": "vscode-yaml-sort.sortYaml",
        "title": "Sort YAML",
        "when": "editorLangId == yaml"
      },
      {
        "command": "vscode-yaml-sort.validateYaml",
        "title": "Validate YAML",
        "when": "editorLangId == yaml"
      },
      {
        "command": "vscode-yaml-sort.sortConfigmap",
        "title": "Sort Kubernetes Configmap",
        "when": "editorLangId == yaml"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "postinstall": "node ./node_modules/vscode/bin/install",
    "test": "npm run compile && node ./node_modules/vscode/bin/test"
  },
  "devDependencies": {
    "typescript": "^3.3.1",
    "vscode": "^1.1.28",
    "tslint": "^5.12.1",
    "@types/node": "^10.12.21",
    "@types/mocha": "^2.2.42"
  },
  "dependencies": {
    "js-yaml": "^3.6.1"
  }
}
